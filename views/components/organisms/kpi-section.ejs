<!-- KPI Dashboard Section Organism -->
<div class="kpi-section<%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : '' %>">
  <% kpis.forEach((kpi, index) => { %>
    <div class="kpi-section-item" data-animation-delay="<%= index * 0.1 %>">
      <%- include('../molecules/kpi-card', {
        title: kpi.title,
        value: kpi.value,
        prefix: kpi.prefix,
        suffix: kpi.suffix,
        icon: kpi.icon,
        bgColor: kpi.bgColor,
        id: kpi.id,
        valueId: kpi.valueId,
        change: kpi.change,
        changeType: kpi.changeType
      }) %>
    </div>
  <% }); %>
</div>