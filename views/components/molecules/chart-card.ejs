<!-- Chart Card Molecule -->
<div class="chart-card<%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : ' mb-4' %>">
  <div class="chart-card-header">
    <div class="chart-card-title-section">
      <% if (typeof icon !== 'undefined' && icon) { %>
        <%- include('../atoms/icon', { name: icon, additionalClasses: 'chart-card-icon' }) %>
      <% } %>
      <h5 class="chart-card-title"><%= title %></h5>
    </div>
  </div>

  <div class="chart-card-body">
    <%- include('../atoms/chart-container', {
      chartId: chartId,
      height: height,
      placeholder: typeof placeholder !== 'undefined' ? placeholder : 'Loading chart...',
      data: typeof data !== 'undefined' ? data : undefined
    }) %>

    <% if (typeof subtitle !== 'undefined' && subtitle) { %>
      <div class="chart-card-subtitle">
        <small class="chart-subtitle-text"><%= subtitle %></small>
      </div>
    <% } %>
  </div>
</div>