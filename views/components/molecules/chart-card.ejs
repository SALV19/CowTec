<!-- Chart Card Molecule -->
<div class="card chart-card border-0 shadow-sm h-100<%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : ' mb-4' %>">
  <div class="card-header bg-white border-0 pb-0">
    <div class="d-flex justify-content-between align-items-center">
      <div class="chart-title">
        <% if (typeof icon !== 'undefined' && icon) { %>
          <%- include('../atoms/icon', { name: icon, additionalClasses: 'text-primary me-2' }) %>
        <% } %>
        <h5 class="mb-0 d-inline fw-semibold"><%= title %></h5>
      </div>
    </div>
  </div>

  <div class="card-body">
    <%- include('../atoms/chart-container', {
      chartId: chartId,
      height: height,
      placeholder: typeof placeholder !== 'undefined' ? placeholder : 'Loading chart...',
      data: typeof data !== 'undefined' ? data : undefined
    }) %>

    <% if (typeof subtitle !== 'undefined' && subtitle) { %>
      <div class="chart-subtitle mt-2">
        <small class="text-muted"><%= subtitle %></small>
      </div>
    <% } %>
  </div>
</div>