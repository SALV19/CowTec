<!-- Card Header Atom -->
<div class="card-header<%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : '' %>"
     style="padding: var(--spacing-4); background: var(--color-bg-gray-50); border-bottom: 1px solid var(--color-border-light);">
  <% if (typeof icon !== 'undefined' && icon) { %>
    <%- include('icon', { name: icon, additionalClasses: 'me-2 text-primary' }) %>
  <% } %>
  <% if (typeof title === 'string') { %>
    <h5 class="mb-0" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-primary);"><%= title %></h5>
  <% } else if (typeof content !== 'undefined') { %>
    <%= content %>
  <% } %>
</div>