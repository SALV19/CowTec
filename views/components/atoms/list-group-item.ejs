<!-- List Group Item Atom -->
<a 
  href="<%= href || '#' %>" 
  class="list-group-item list-group-item-action<%= isActive ? ' active' : '' %><%= additionalClasses ? ' ' + additionalClasses : '' %>"
  <% if (id) { %>id="<%= id %>"<% } %>
  <% if (dataAttributes) { %>
    <% Object.keys(dataAttributes).forEach(key => { %>
      data-<%= key %>="<%= dataAttributes[key] %>"
    <% }); %>
  <% } %>
>
  <%= content %>
</a>