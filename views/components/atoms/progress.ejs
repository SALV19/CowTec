<!-- Progress Bar Atom -->
<div class="progress<%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : '' %>"
     style="height: <%= typeof height !== 'undefined' ? height : '8px' %>; background: var(--color-gray-200); border-radius: var(--border-radius-full); overflow: hidden;">
  <div
    class="progress-bar<%= typeof variant !== 'undefined' ? ' bg-' + variant : '' %><%= typeof striped !== 'undefined' && striped ? ' progress-bar-striped' : '' %><%= typeof animated !== 'undefined' && animated ? ' progress-bar-animated' : '' %>"
    role="progressbar"
    style="width: <%= typeof value !== 'undefined' ? value : 0 %>%; background: var(--gradient-primary); border-radius: var(--border-radius-full); transition: width var(--transition-normal);"
    aria-valuenow="<%= typeof value !== 'undefined' ? value : 0 %>"
    aria-valuemin="0"
    aria-valuemax="100"
    <% if (typeof label !== 'undefined' && label) { %>
      aria-label="<%= label %>"
    <% } %>
  >
    <% if (typeof showValue !== 'undefined' && showValue) { %>
      <%= typeof value !== 'undefined' ? value : 0 %>%
    <% } %>
  </div>
</div>