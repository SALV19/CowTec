<!-- Badge Atom -->
<span class="badge badge-<%= typeof variant !== 'undefined' ? variant : 'primary' %><%= typeof additionalClasses !== 'undefined' && additionalClasses ? ' ' + additionalClasses : '' %>">
  <% if (typeof icon !== 'undefined' && icon) { %>
    <%- include('icon', { name: icon, additionalClasses: (typeof text !== 'undefined' && text) ? 'me-1' : '' }) %>
  <% } %>
  <% if (typeof text !== 'undefined' && text) { %><%= text %><% } %>
</span>