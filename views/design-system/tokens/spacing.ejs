<%# 
  📏 DESIGN TOKENS - SPACING
  
  Consistent spacing values for margins, padding, and layout
%>

<%
const spacing = {
  // Base spacing unit (1rem = 16px typically)
  xs: '0.25rem',    // 4px
  sm: '0.5rem',     // 8px  
  md: '1rem',       // 16px
  lg: '1.5rem',     // 24px
  xl: '2rem',       // 32px
  '2xl': '3rem',    // 48px
  '3xl': '4rem',    // 64px
  '4xl': '6rem',    // 96px
  
  // Component specific
  cardPadding: '1.5rem',
  kpiCardPadding: '1.25rem',
  sectionSpacing: '2rem',
  containerGap: '1rem'
};

const borderRadius = {
  none: '0',
  sm: '0.125rem',   // 2px
  md: '0.375rem',   // 6px  
  lg: '0.5rem',     // 8px
  xl: '0.75rem',    // 12px
  '2xl': '1rem',    // 16px
  full: '9999px'    // Perfect circle
};

const shadows = {
  sm: '0 1px 2px 0 rgb(0 0 0 / 0.05)',
  md: '0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)',
  lg: '0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)',
  xl: '0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)',
  card: '0 4px 6px -1px rgb(0 0 0 / 0.1)',
  kpiCard: '0 2px 4px rgb(0 0 0 / 0.1)'
};
%>

<style>
:root {
  /* Spacing Scale */
  <% Object.entries(spacing).forEach(([key, value]) => { %>
  --spacing-<%= key %>: <%= value %>;
  <% }); %>
  
  /* Border Radius */
  <% Object.entries(borderRadius).forEach(([key, value]) => { %>
  --radius-<%= key %>: <%= value %>;
  <% }); %>
  
  /* Shadows */
  <% Object.entries(shadows).forEach(([key, value]) => { %>
  --shadow-<%= key %>: <%= value %>;
  <% }); %>
  
  /* Grid & Layout */
  --container-max-width: 1200px;
  --grid-gap: var(--spacing-md);
  --section-gap: var(--spacing-2xl);
}
</style>

<script>
window.DesignTokens = window.DesignTokens || {};
window.DesignTokens.spacing = <%- JSON.stringify(spacing) %>;
window.DesignTokens.borderRadius = <%- JSON.stringify(borderRadius) %>;
window.DesignTokens.shadows = <%- JSON.stringify(shadows) %>;
</script>