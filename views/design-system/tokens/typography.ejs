<%# 
  ðŸ“ DESIGN TOKENS - TYPOGRAPHY
  
  Font families, sizes, weights, and line heights
%>

<%
const typography = {
  fontFamilies: {
    sans: ['"Inter"', '"Segoe UI"', 'system-ui', 'sans-serif'],
    mono: ['"Fira Code"', '"Monaco"', 'monospace'],
    display: ['"Inter"', 'sans-serif']
  },
  
  fontSizes: {
    xs: '0.75rem',      // 12px
    sm: '0.875rem',     // 14px
    base: '1rem',       // 16px
    lg: '1.125rem',     // 18px
    xl: '1.25rem',      // 20px
    '2xl': '1.5rem',    // 24px
    '3xl': '1.875rem',  // 30px
    '4xl': '2.25rem',   // 36px
    '5xl': '3rem',      // 48px
    '6xl': '3.75rem'    // 60px
  },
  
  fontWeights: {
    thin: '100',
    light: '300',
    normal: '400',
    medium: '500',
    semibold: '600',
    bold: '700',
    extrabold: '800'
  },
  
  lineHeights: {
    tight: '1.25',
    normal: '1.5',
    relaxed: '1.75',
    loose: '2'
  }
};
%>

<style>
:root {
  /* Font Families */
  --font-sans: <%= typography.fontFamilies.sans.join(', ') %>;
  --font-mono: <%= typography.fontFamilies.mono.join(', ') %>;
  --font-display: <%= typography.fontFamilies.display.join(', ') %>;
  
  /* Font Sizes */
  <% Object.entries(typography.fontSizes).forEach(([key, value]) => { %>
  --text-<%= key %>: <%= value %>;
  <% }); %>
  
  /* Font Weights */
  <% Object.entries(typography.fontWeights).forEach(([key, value]) => { %>
  --font-<%= key %>: <%= value %>;
  <% }); %>
  
  /* Line Heights */
  <% Object.entries(typography.lineHeights).forEach(([key, value]) => { %>
  --leading-<%= key %>: <%= value %>;
  <% }); %>
}

/* Typography Classes */
.text-display {
  font-family: var(--font-display);
  font-weight: var(--font-bold);
  line-height: var(--leading-tight);
}

.text-heading {
  font-family: var(--font-sans);
  font-weight: var(--font-semibold);
  line-height: var(--leading-tight);
}

.text-body {
  font-family: var(--font-sans);
  font-weight: var(--font-normal);
  line-height: var(--leading-normal);
}

.text-caption {
  font-family: var(--font-sans);
  font-weight: var(--font-medium);
  font-size: var(--text-sm);
  line-height: var(--leading-normal);
}

.text-code {
  font-family: var(--font-mono);
  font-weight: var(--font-normal);
  font-size: var(--text-sm);
}
</style>

<script>
window.DesignTokens = window.DesignTokens || {};
window.DesignTokens.typography = <%- JSON.stringify(typography) %>;
</script>